{
  "Sakin": {
    "IngestEndpoint": "${SAKIN_ENDPOINT}",
    "AgentToken": "${SAKIN_TOKEN}",
    "AgentName": "${HOSTNAME}",
    "ProxyUrl": "${PROXY_URL}"
  },
  "Agent": {
    "AgentId": "${HOSTNAME}",
    "DryRun": false,
    "AllowlistedScripts": [],
    "ScriptsDirectory": "/opt/sakin-agent/scripts",
    "CommandExpireTime": "00:05:00",
    "IptablesPath": "/sbin/iptables",
    "Ip6tablesPath": "/sbin/ip6tables",
    "IptablesSavePath": "/sbin/iptables-save",
    "IptablesRestorePath": "/sbin/iptables-restore",
    "QueuePersistenceFile": "/var/lib/sakin-agent/queue.db"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "ClientId": "${HOSTNAME}"
  },
  "KafkaProducer": {
    "DefaultTopic": "agent-events"
  },
  "KafkaTopics": {
    "AgentCommand": "sakin-agent-command",
    "AgentResult": "sakin-agent-result",
    "AuditLog": "sakin-audit-log"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
