{
  "Database": {
    "Host": "localhost",
    "Username": "postgres",
    "Password": "TODO_SET_VIA_USER_SECRETS",
    "Database": "network_db_dev",
    "Port": 5432
  },
  "Kafka": {
    "BootstrapServers": "localhost:29092",
    "ClientId": "sakin-network-sensor-dev",
    "RequestTimeoutMs": 30000,
    "MessageTimeoutMs": 60000,
    "SecurityProtocol": "Plaintext"
  },
  "KafkaProducer": {
    "DefaultTopic": "network-events",
    "BatchSize": 100,
    "LingerMs": 10,
    "CompressionType": "Snappy",
    "RequiredAcks": "Leader",
    "RetryCount": 3,
    "RetryBackoffMs": 100,
    "EnableIdempotence": true,
    "MaxInFlight": 5
  },
  "Sensor": {
    "Topics": {
      "NetworkEvents": "network-events"
    },
    "Fallback": {
      "Path": "/data/exports/sensor-kafka-fallback.jsonl"
    },
    "MetricsLogIntervalSeconds": 15
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Sakin.Core.Sensor": "Trace",
      "Sakin.Core.Sensor.Services": "Debug",
      "Sakin.Core.Sensor.Handlers": "Debug",
      "Sakin.Core.Sensor.Utils": "Debug",
      "Sakin.Core.Sensor.Messaging": "Debug",
      "Microsoft.Hosting.Lifetime": "Information",
      "System": "Information"
    }
  }
}
