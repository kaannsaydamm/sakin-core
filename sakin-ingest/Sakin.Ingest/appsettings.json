{
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Database=sakin_db;Username=postgres;Password=postgres"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "RawEventsTopic": "raw-events",
    "NormalizedEventsTopic": "normalized-events",
    "ConsumerGroup": "ingest-service",
    "ClientId": "sakin-ingest"
  },
  "Parsers": {
    "Enabled": ["windows-eventlog", "syslog", "apache", "fortinet"],
    "TimeFormats": ["ISO8601", "RFC5424", "Apache"],
    "GeoIpEnabled": false
  },
  "GeoIp": {
    "Enabled": true,
    "DatabasePath": "/data/GeoLite2-City.mmdb",
    "CacheTtlSeconds": 3600,
    "CacheMaxSize": 10000
  },
  "ThreatIntel": {
    "Enabled": true,
    "Providers": [
      {
        "Type": "OTX",
        "Enabled": false
      },
      {
        "Type": "AbuseIPDB",
        "Enabled": false
      }
    ],
    "MaliciousScoreThreshold": 80,
    "MaliciousCacheTtlDays": 7,
    "CleanCacheTtlHours": 1,
    "NotFoundCacheTtlHours": 24,
    "LookupTopic": "ti-lookup-queue"
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Sakin.Ingest": "Information"
    }
  }
}
