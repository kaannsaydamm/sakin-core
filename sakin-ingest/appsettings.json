{
  "Database": {
    "Host": "localhost",
    "Username": "postgres",
    "Password": "TODO_SET_VIA_USER_SECRETS_OR_ENV_VAR",
    "Database": "ingest_db",
    "Port": 5432
  },
  "Kafka": {
    "BootstrapServers": "localhost:29092",
    "ClientId": "sakin-ingest",
    "RequestTimeoutMs": 30000,
    "MessageTimeoutMs": 60000,
    "SecurityProtocol": "Plaintext",
    "Producer": {
      "BatchSize": 100,
      "LingerMs": 10,
      "CompressionType": "Snappy",
      "EnableIdempotence": true,
      "Acks": "All",
      "Retries": 3,
      "RetryBackoffMs": 100
    },
    "Consumer": {
      "GroupId": "sakin-ingest-group",
      "AutoOffsetReset": "Latest",
      "EnableAutoCommit": false,
      "MaxPollRecords": 100,
      "SessionTimeoutMs": 30000,
      "HeartbeatIntervalMs": 3000
    }
  },
  "Ingestion": {
    "BatchSize": 100,
    "FlushIntervalSeconds": 30,
    "MaxRetries": 3,
    "EnableDeduplication": true,
    "EnableEnrichment": true,
    "SupportedFormats": [ "JSON", "Syslog", "CEF" ],
    "InputTopic": "sakin.raw.events",
    "OutputTopic": "sakin.normalized.events",
    "ConsumerGroupId": "sakin-ingest-group"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Sakin.Ingest": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
