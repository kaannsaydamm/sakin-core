{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Database=sakin_db;Username=postgres;Password=postgres"
  },
  "Database": {
    "Host": "localhost",
    "Port": 5432,
    "Database": "correlation_db",
    "Username": "postgres",
    "Password": "postgres"
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "AlertLifecycle": {
    "DedupTtlMinutes": 60,
    "StaleAlertThresholdHours": 24,
    "BulkOperationLimit": 1000,
    "AutoResolutionEnabled": true,
    "AuditTopic": "audit-log"
  },
  "Jwt": {
    "SecretKey": "CHANGE_ME_IN_PRODUCTION_USE_AT_LEAST_32_CHARACTERS",
    "Issuer": "sakin-api",
    "Audience": "sakin-clients",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "ClientCredentials": {
    "Clients": [
      {
        "ClientId": "admin-client",
        "ClientSecret": "admin-secret-change-in-production",
        "Name": "Admin Client",
        "Role": "Admin",
        "Enabled": true
      },
      {
        "ClientId": "analyst-client",
        "ClientSecret": "analyst-secret-change-in-production",
        "Name": "Analyst Client",
        "Role": "Analyst",
        "Enabled": true
      },
      {
        "ClientId": "readonly-client",
        "ClientSecret": "readonly-secret-change-in-production",
        "Name": "ReadOnly Client",
        "Role": "ReadOnly",
        "Enabled": true
      }
    ]
  },
  "ApiKey": {
    "Enabled": true,
    "HeaderName": "X-API-Key",
    "Keys": [
      {
        "Key": "collector-api-key-change-in-production",
        "Name": "Collector API Key",
        "Description": "For event collectors",
        "Role": "Agent",
        "Enabled": true
      }
    ]
  },
  "AuditLogging": {
    "Enabled": true,
    "Topic": "audit-log",
    "ServiceName": "sakin-panel-api",
    "IncludePayload": false
  },
  "Validation": {
    "MaxEventSizeBytes": 65536,
    "MaxRegexTimeoutMs": 100,
    "EnforceUtf8": true,
    "AllowControlCharacters": false,
    "MaxFieldLength": 10000
  },
  "TLS": {
    "Enabled": false,
    "CertificatePath": "/secrets/certs",
    "CertificateFileName": "service.crt",
    "PrivateKeyFileName": "service.key",
    "CaCertificateFileName": "ca.crt",
    "VerifyServerCertificate": true,
    "CertificateValidationMode": "RequireValidCertificate"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "SecurityProtocol": "Plaintext"
  },
  "AllowedHosts": "*"
}
