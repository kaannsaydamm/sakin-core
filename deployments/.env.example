# Sakin Platform - Docker Compose Environment Variables
# Copy this file to .env and customize for your environment

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_dev_password
POSTGRES_DB=network_db
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=redis_dev_password
REDIS_PORT=6379

# Kafka Configuration
KAFKA_PORT=9092
KAFKA_EXTERNAL_PORT=29092

# Zookeeper Configuration
ZOOKEEPER_PORT=2181

# OpenSearch Configuration
OPENSEARCH_PORT=9200
OPENSEARCH_DASHBOARD_PORT=5601
OPENSEARCH_JAVA_OPTS=-Xms512m -Xmx512m

# ClickHouse Configuration
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_USER=clickhouse
CLICKHOUSE_PASSWORD=clickhouse_dev_password
CLICKHOUSE_DB=sakin_analytics

# Prometheus Configuration
PROMETHEUS_PORT=9090

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin_dev_password

# Jaeger Configuration
JAEGER_COLLECTOR_PORT=14268
JAEGER_UI_PORT=16686
JAEGER_OTLP_GRPC_PORT=4317

# SOAR Configuration
SOAR_PLAYBOOKS_PATH=/etc/sakin/playbooks
SOAR_RULES_PATH=/etc/sakin/correlation-rules

# Slack Webhook (for SOAR notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Jira Configuration (for SOAR)
JIRA_BASE_URL=https://jira.example.com
JIRA_API_TOKEN=your_jira_api_token
JIRA_PROJECT_KEY=SEC

# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=alerts@example.com
SMTP_PASSWORD=smtp_password
SMTP_FROM_ADDRESS=alerts@example.com

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=sakin-platform
