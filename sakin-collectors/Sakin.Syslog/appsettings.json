{
  "Agent": {
    "Name": "syslog-collector-01",
    "Hostname": "localhost"
  },
  "Syslog": {
    "UdpPort": 514,
    "TcpPort": 514,
    "TcpEnabled": false,
    "BufferSize": 65535
  },
  "Kafka": {
    "Enabled": true,
    "BootstrapServers": "kafka:9092",
    "ClientId": "syslog-collector-01",
    "Topic": "raw-events",
    "BatchSize": 100,
    "FlushIntervalMs": 5000,
    "RetryCount": 3,
    "RetryBackoffMs": 500
  },
  "KafkaProducer": {
    "DefaultTopic": "raw-events"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}