{
    "Sakin": {
        "IngestEndpoint": "${SAKIN_ENDPOINT}",
        "AgentToken": "${SAKIN_TOKEN}",
        "AgentName": "${HOSTNAME}",
        "ProxyUrl": "${PROXY_URL}"
    },
    "Agent": {
        "AgentId": "${HOSTNAME}",
        "DryRun": false,
        "AllowlistedScripts": [],
        "ScriptsDirectory": "scripts",
        "CommandExpireTime": "00:05:00",
        "QueuePersistenceFile": "C:\\ProgramData\\Sakin\\Agent\\queue.db"
    },
    "Kafka": {
        "BootstrapServers": "localhost:9092",
        "ClientId": "${HOSTNAME}"
    },
    "KafkaProducer": {
        "DefaultTopic": "agent-events"
    },
    "KafkaTopics": {
        "AgentCommand": "sakin-agent-command",
        "AgentResult": "sakin-agent-result",
        "AuditLog": "sakin-audit-log"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    }
}