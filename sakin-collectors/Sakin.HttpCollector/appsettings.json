{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Sakin.HttpCollector": "Debug"
    }
  },
  "HttpCollector": {
    "Port": 8080,
    "Path": "/api/events",
    "MaxBodySize": 65536,
    "RequireApiKey": false,
    "ValidApiKeys": []
  },
  "Kafka": {
    "BootstrapServers": "kafka:9092",
    "Topic": "raw-events"
  },
  "KafkaOptions": {
    "BootstrapServers": "kafka:9092"
  },
  "ProducerOptions": {
    "LingerMs": 10,
    "BatchSize": 16384,
    "CompressionType": "snappy",
    "Acks": "all",
    "MaxInFlight": 5,
    "EnableIdempotence": true,
    "RetryBackoffMs": 100
  }
}
